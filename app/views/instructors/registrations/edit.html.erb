<div class="card">
  <div class="card-header">
    <h4>Edit Profile <%= resource_name.to_s.humanize %></h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "instructors/shared/error_messages", resource: resource %>
      <div class="row mb-3">
        <div class="col-sm-6">
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'Name', required: true %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-sm-6">
          <%= f.text_field :department, autofocus: true, class: "form-control", placeholder: 'Department', required: true %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-sm-6">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email', disabled: true %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-sm-6">
          <%= f.label :current_password %> <i>(Need current password to confirm your changes)</i><br/>
          <%= f.password_field :current_password, autofocus: true, class: "form-control", placeholder: 'Current Password', required: true %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: 'btn btn-secondary' %>
        <%= link_to "Back", :back, class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
</div>