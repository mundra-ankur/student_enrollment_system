<h2 align="center"><strong>Students</strong></h2>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark">
    <tr>
      <th scope="col">Student ID</th>
      <th scope="col">Name</th>
      <th scope="col">Date Of Birth</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Major</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.student_id %></td>
        <td><%= student.name %></td>
        <td><%= student.dob %></td>
        <td><%= student.email %></td>
        <td><%= student.phone %></td>
        <td><%= student.major %></td>
        <td><%= link_to 'Enroll', student_root_path(student_id: student.student_id), class: 'btn btn-outline-success' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Delete', student, method: :delete,
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<div>
  <%= link_to "New student", new_student_path, class: 'btn btn-secondary' %>
  <%= link_to 'Back', admin_root_path, class: 'btn btn-dark' %>
</div>